<div class="container">

    <div class="row">
    <h1 style="margin-top: 50px;"><%= @place["name"] %></h1>
    </div>

    <br>

    <% if @current_user %>

    <div class="row">
    <p>
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-outline-primary">New Post</a>
    </p>
    </div>

    <br>
    
    <div class="mx-auto" style="width: 200px;">
    <h2>My Posts</h2>
    </div>
    
    <br>

    <div class="row">
    <% for post in @posts %>
        <div class="col-sm-4">
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>

        <% if post.uploaded_image.attached? %>
        <img src="<%= url_for(post.uploaded_image) %>" class="img-fluid">
        <% else %>
        <img src="<%= post["image"] %>" class="img-fluid">
         <% end %>

        <p><%= post["description"] %></p>
        </div>
    <% end %>
    </div>

<% end %>

    <br>
    <br>

    <div class="row">
    <p>
     <a href="/places" class="btn btn-link">Back to All Places</a>
    </p>
    </div>

</div>
